<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="45sp"
        android:gravity="right|bottom"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="0,1,2,3">

        <TableRow>
            <Button android:id="@+id/btnDiv" android:text="/" />
            <Button android:id="@+id/btnMul" android:text="x" />
            <Button android:id="@+id/btnSub" android:text="-" />
            <Button android:id="@+id/btnAdd" android:text="+" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn7" android:text="7" />
            <Button android:id="@+id/btn8" android:text="8" />
            <Button android:id="@+id/btn9" android:text="9" />
            <Button android:id="@+id/btnBack" android:text="&lt;" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn4" android:text="4" />
            <Button android:id="@+id/btn5" android:text="5" />
            <Button android:id="@+id/btn6" android:text="6" />
            <Button android:id="@+id/btnClear" android:text="AC" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn1" android:text="1" />
            <Button android:id="@+id/btn2" android:text="2" />
            <Button android:id="@+id/btn3" android:text="3" />
            <Button android:enabled="false" android:text="" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn0" android:text="0" android:layout_weight="2" android:layout_width="0dp" />
            <Button android:id="@+id/btnDot" android:text="." android:layout_weight="1" android:layout_width="0dp" />
            <Button android:id="@+id/btnEqual" android:text="=" android:layout_weight="1" android:layout_width="0dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>
